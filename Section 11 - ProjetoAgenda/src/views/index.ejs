<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container-fluid h-100">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-5">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Contatos dos colaboradores do setor XYZ</p>

      <%- include('includes/messages') %>

      <% if(contatos.length > 0) {%>

      <div class="responsive-table">
        <table class="table my-3">
          <tr>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>Ramal</th>
            <th>Email</th>
          </tr>

          <% contatos.forEach(contato => { %>
          <tr>
            <td><%= contato.nome %></td>
            <td><%= contato.sobrenome %></td>
            <td><%= contato.telefone %></td>
            <td><%= contato.email %></td>
            <td>
              <a class="text-danger" href="/contato/index/<%= contato._id %>">
                <button type="button" class="btn btn-primary">Editar</button>
              </a>
            </td>

            <td>
              <a class="text-danger" href="/contato/delete/<%= contato._id %>">
                <button type="button" class="btn btn-danger">Excuir</button>
              </a>
            </td>
          </tr>
          <% }); %>
        </table>
      </div>
      <!--(contatos.lenght < 0) pra n esquecer-->
      <% } else { %>
      <p class="text-center lead">NÃ£o existem contatos na sua agenda</p>
      <% } %>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer') %>